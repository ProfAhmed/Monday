<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="16dp"
  android:layout_marginTop="2dp"
  android:layout_marginEnd="16dp"
  android:layout_marginBottom="12dp"
  android:orientation="vertical">

  <TextView
    android:id="@+id/tvTableName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_26sdp"
    android:layout_marginEnd="@dimen/_26sdp"
    android:layout_marginBottom="@dimen/_12sdp"
    android:text="Table Name"
    android:textColor="#C9000000"
    android:textSize="@dimen/_12ssp"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="12dp"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
          android:id="@+id/circular_progress"
          android:layout_width="@dimen/_40sdp"
          android:layout_height="@dimen/_40sdp"
          app:direction="clockwise"
          app:dotColor="?colorPrimary"
          app:dotWidth="2dp"
          app:drawDot="false"
          app:enableProgressAnimation="true"
          app:fillBackground="true"
          app:gradientEndColor="@android:color/transparent"
          app:gradientType="no_gradient"
          app:progressBackgroundColor="#20AEADAD"
          app:progressBackgroundStrokeWidth="2dp"
          app:progressCap="round"
          app:progressColor="?colorPrimary"
          app:progressStrokeWidth="2dp"
          app:startAngle="270"
          app:textColor="#BC000000"
          app:textSize="12sp" />

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_16sdp"
          android:layout_weight="1"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/task_name"
              android:textColor="#BFBEBE"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/tvTaskName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:maxLines="1"
              android:text=" Task Namend ,jbjaskdn"
              android:textColor="@color/colorPrimary" />
          </LinearLayout>

          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="#EDEAEA" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/date"
              android:textColor="#BFBEBE" />

            <TextView
              android:id="@+id/tvEndDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="6dp"
              android:text=": 25-03-2003" />

          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp">

            <TextView
              android:id="@+id/tvInfo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/start_date"
              android:textColor="#BFBEBE" />

            <TextView
              android:id="@+id/tvInfoValue"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="6dp" />

          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Space
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1" />

            <ImageView
              android:id="@+id/ivAddDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_meeting_time" />

            <Space
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1" />

            <ImageView
              android:id="@+id/ivStartDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_add_date" />

            <Space
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1" />

            <ImageView
              android:id="@+id/ivDueDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_due_date" />

            <Space
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1" />

            <ImageView
              android:id="@+id/ivMeetingLink"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_meeting_link" />

            <Space
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1" />

            <ImageView
              android:id="@+id/ivMeetingTime"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_start_date" />

            <Space
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1" />
          </LinearLayout>
        </LinearLayout>

      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#EDEAEA" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#128E8E8E"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_8sdp"
        android:paddingEnd="6dp"
        android:paddingBottom="@dimen/_4sdp">

        <androidx.cardview.widget.CardView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="2dp"
          android:layout_marginBottom="2dp"
          app:cardCornerRadius="2dp"
          app:cardElevation="@dimen/_2sdp">

          <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:paddingStart="@dimen/_4sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Done"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
        </androidx.cardview.widget.CardView>

        <Space
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />

        <ImageView
          android:id="@+id/ivPeople"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="8dp"
          android:src="@drawable/ic_people_alt_24px" />

        <Space
          android:layout_width="6dp"
          android:layout_height="wrap_content" />

        <ImageView
          android:id="@+id/ivAttachment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="8dp"

          android:src="@drawable/ic_attach_file_24px" />

        <Space
          android:layout_width="6dp"
          android:layout_height="wrap_content" />

        <ImageView
          android:id="@+id/ivComments"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:padding="8dp"
          android:src="@drawable/ic_comments" />
      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>

</LinearLayout>